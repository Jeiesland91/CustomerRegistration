@model RegistrationModel
@{
    ViewBag.Title = "Customer Registration";
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/minimum-age.js"></script>
}

<form asp-action="ViewFormData" method="post">
    <div class="form-group row">
        <div class="col-sm-2"><label>Name:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.CustomerName" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.CustomerName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Address:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.Address" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Phone Number:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.Phone" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Email Address:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="EmailAddress"
                   class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="EmailAddress"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Age:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.Age" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.Age" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Contact Preference:</label></div>
        <div class="col-sm-4">
            @Html.DropDownList("ContactTypes", (IEnumerable 
                <SelectListItem>)ViewBag.ContactTypes)
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>
</form>
